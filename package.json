{
  "name": "cicd-github-actions",
  "version": "1.0.0",
  "description": "Proyecto de pr√°ctica CI/CD con GitHub Actions",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "cypress run",
    "test:coverage": "jest --coverage",
    "quality": "npm run type-check && npm run lint && npm run format:check && npm run test:coverage"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "cicd",
    "github-actions"
  ],
  "author": "Alejandro Barrera <alejandro91dark@hotmail.es>",
  "license": "ISC",
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^25.0.9",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "cypress": "^13.6.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "typescript": "^5.9.3"
  }
